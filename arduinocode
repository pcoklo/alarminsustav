int ledPin = 13;
int inPin = A5;
int statePin = A4;

String inputString = "";
String nullString = "";
String keyString = "0300C49D207A";

boolean flag1 = false;

void setup() {
  Serial.begin(9600);
  pinMode(ledPin, OUTPUT);
  pinMode(statePin, OUTPUT);
  digitalWrite(statePin, HIGH);
  pinMode(inPin, INPUT);
}

void loop(){
  
  if(Serial.available()==0 && flag1){
    if(inputString == keyString){
      Serial.println("Autorizacija uspjesna!");
      digitalWrite(statePin,0);
      Serial.println("Alarm deaktiviran!");
      inputString=nullString;
    }
  }
  
  delay(10);
  
  if (digitalRead(inPin) == HIGH) digitalWrite(ledPin, 1); 
  else digitalWrite(ledPin, 0);

}

void serialEvent() {
  if(!flag1){
    flag1 = true;
    inputString=nullString;
    Serial.read();
    do{
      inputString +=char(Serial.read());
      delay(10);
    }while(inputString.length()<12);
  }else Serial.read();
}
